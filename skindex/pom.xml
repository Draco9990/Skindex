<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--Hello! You'll basically should only need to change these names and the steam path (just below)-->
    <!--The author name(s) as they appear in MTS and any other comments are in your ModTheSpire.json-->
    <groupId>skindex</groupId>
    <artifactId>skindex</artifactId> <!--Keep a note of this one: this is the ID used in the "auto add cards" method-->
    <name>Skindex</name>
    <version>0.4.0</version>
    <description>Reskin the Spire's characters to your liking!</description>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <SlayTheSpire.version>01-23-2019</SlayTheSpire.version>
        <ModTheSpire.version>3.8.0</ModTheSpire.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!--CHANGE THIS TO YOUR STEAM INSTALLATION-->
        <WorkshopContent.path>C:\SteamLibrary\steamapps\workshop\content\646570</WorkshopContent.path>
        <Libraries.path>E:\Marino\Projects\Together in Spire\Libraries</Libraries.path>
        <Mods.path>E:\Marino\Games\Slay The Spire\Game\mods</Mods.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.megacrit.cardcrawl</groupId>
            <artifactId>slaythespire</artifactId>
            <version>${SlayTheSpire.version}</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/desktop-1.0.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.evacipated.cardcrawl</groupId>
            <artifactId>modthespire</artifactId>
            <version>${ModTheSpire.version}</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/ModTheSpire.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>basemod</groupId>
            <artifactId>BaseMod</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/1605833019/BaseMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.evacipated.cardcrawl.mod</groupId>
            <artifactId>StSLib</artifactId>
            <version>1.3.2</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/StSLib.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>dlib</groupId>
            <artifactId>dLib</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${Mods.path}/dLib.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>downfall</groupId>
            <artifactId>Downfall</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/1610056683/downfall.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>thenchained</groupId>
            <artifactId>TheUnchained</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/2898404807/TheUnchainedMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.shadowverse.mod</groupId>
            <artifactId>shadowverse</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/shadowverseMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.elena.mod</groupId>
            <artifactId>elena</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/ElenaMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.marisa.mod</groupId>
            <artifactId>marisa</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/MarisaContinued.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.pirateMod.mod</groupId>
            <artifactId>theAbyssal</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${Libraries.path}/PirateMod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.skulMod.mod</groupId>
            <artifactId>skulMod</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/3025811995/skulmod.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>packmaster</groupId>
            <artifactId>Packmaster</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/2920075378/ThePackmaster.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>duelistmod</groupId>
            <artifactId>DuelistMod</artifactId>
            <version>0.0.1</version>
            <scope>system</scope>
            <systemPath>${WorkshopContent.path}/1673346215/DuelistMod.jar</systemPath>
        </dependency>
    </dependencies>


    <!-- This is how your code is packaged into the jar file-->
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <excludes>
                        <exclude>**/*.psd</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy file="target/${project.artifactId}.jar" tofile="${Mods.path}/${project.artifactId}.jar"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>ModTheSpire.json</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>ModTheSpire.json</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
